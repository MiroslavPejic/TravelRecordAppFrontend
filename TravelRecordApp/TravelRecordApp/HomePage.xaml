<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:TravelRecordApp"
            x:Class="TravelRecordApp.HomePage">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     IconImageSource="ic_action_add.png"
                     Clicked="ToolbarItem_Clicked"/>
    </TabbedPage.ToolbarItems>
    
    <local:HistoryPage Title="History Page"
                       IconImageSource="ic_action_home.png"/>
    <local:MapPage Title="Map Page"
                   IconImageSource="ic_action_map.png"/>
    <local:ProfilePage Title="Profile Page"
                       IconImageSource="ic_action_person.png"/>
</TabbedPage>