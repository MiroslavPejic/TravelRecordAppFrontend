<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.PostDetailPage">
    <StackLayout>
        <Entry x:Name="experienceEntry"/>
        <Label x:Name="venueLabel"
               Margin="0, 30, 0, 0"
               FontAttributes="Bold"
               FontSize="22"
               Text="Some fancy stuff"
            />
        <Label x:Name="categoryLabel"
               Text="Some fancy stuff"
               TextColor="{StaticResource blueColor}"
            />
        <Label x:Name="addressLabel"
               FontSize="15"
               Text="Some fancy stuff"
            />
        <Label x:Name="coordinatesLabel"
               FontSize="15"
               Text="Some fancy stuff"
            />
        <Label x:Name="distanceLabel"
               FontSize="15"
               Text="Some fancy stuff"
            />
        <Button Text="Update"
                x:Name="updateButton"
                Clicked="UpdateButton_Clicked"/>
        <Button Text="Delete"
                x:Name="deleteButton"
                Clicked="DeleteButton_Clicked"/>
    </StackLayout>
</ContentPage>